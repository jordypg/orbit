{
  "name": "orbit-pipeline",
  "version": "1.0.0",
  "description": "A resilient job execution pipeline with retry logic and state persistence",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "orbit": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "dev:ui": "next dev",
    "build:ui": "next build",
    "start:ui": "next start",
    "start": "node dist/cli.js",
    "cli": "tsx src/cli.ts",
    "orbit": "node dist/cli.js",
    "worker": "node dist/worker.js",
    "worker:dev": "tsx watch src/worker.ts",
    "worker:build": "tsc && node dist/worker.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop all",
    "pm2:delete": "pm2 delete all",
    "pm2:restart": "pm2 restart all",
    "pm2:reload": "pm2 reload all",
    "pm2:status": "pm2 list",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:prod": "npm run build && npm run build:ui && pm2 start ecosystem.config.cjs --env production",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "sync:pipelines": "npm run build && tsx scripts/sync-pipelines.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:recovery": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest tests/recovery.test.ts"
  },
  "keywords": [
    "pipeline",
    "jobs",
    "retry",
    "resilient",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.916.0",
    "@aws-sdk/lib-storage": "^3.916.0",
    "@aws-sdk/s3-request-presigner": "^3.917.0",
    "@prisma/client": "^6.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@tanstack/react-query": "^4.41.0",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/mime-types": "^3.0.1",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.545.0",
    "mime-types": "^3.0.1",
    "next": "^14.2.33",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "winston": "^3.17.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pm2": "^6.0.13",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
